{
  // Auto-save configuration - 1 second delay without auto-formatting
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.autoSaveWhenNoErrors": true,

  // File associations
  "files.associations": {
    "*.tsx": "typescriptreact",
    "*.ts": "typescript",
    "*.jsx": "javascriptreact",
    "*.js": "javascript"
  },
  "emmet.showSuggestionsAsSnippets": true,
  // Editor settings - Manual formatting control
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  "editor.wordSeparators": "`~!@#$%^&*()-=+[{]}\\|;:'\",.<>/?",
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // Better undo/redo experience
  "editor.largeFileOptimizations": false,
  "editor.experimental.asyncTokenization": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.rulers": [],
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.tabCompletion": "on",
  "editor.wordBasedSuggestions": "off",

  // TypeScript specific settings
  "typescript.suggest.autoImports": "on",
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.inlayHints.parameterNames.enabled": "none",
  "typescript.inlayHints.variableTypes.enabled": false,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": false,
  "typescript.preferences.includeCompletionsForModuleExports": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.preferences.organizeImportsIgnoreCase": false,
  "typescript.preferences.organizeImportsCollation": "ordinal",

  // JavaScript/React specific settings
  "javascript.suggest.autoImports": "on",
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.inlayHints.parameterNames.enabled": "none",
  "javascript.inlayHints.variableTypes.enabled": false,
  "javascript.inlayHints.functionLikeReturnTypes.enabled": false,
  "javascript.preferences.includeCompletionsForModuleExports": true,
  "javascript.suggest.includeCompletionsForImportStatements": true,

  // ESLint configuration - Auto-fix on manual save
  "eslint.useFlatConfig": true,
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "eslint.format.enable": true,
  "eslint.run": "onSave",
  "eslint.problems.shortenToSingleLine": true,
  "eslint.codeActionsOnSave.mode": "problems",

  // Prettier configuration (aligned with project's .prettierrc)
  "prettier.requireConfig": true,
  "prettier.useEditorConfig": false,
  "prettier.documentSelectors": ["**/*.{js,jsx,ts,tsx,json,md}"],
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 100,
  "prettier.bracketSpacing": false,
  "prettier.bracketSameLine": false,
  "prettier.arrowParens": "always",

  // File explorer settings
  "explorer.confirmDelete": true,
  "explorer.confirmDragAndDrop": true,

  // Search settings
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/android/build": true,
    "**/android/app/build": true,
    "**/ios/build": true,
    "**/ios/DerivedData": true,
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/yarn.lock": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true
  },

  // Files to exclude from file watcher
  "files.watcherExclude": {
    "**/node_modules/**": true,
    "**/android/build/**": true,
    "**/android/app/build/**": true,
    "**/ios/build/**": true,
    "**/ios/DerivedData/**": true,
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true
  },

  // Files to exclude from explorer
  "files.exclude": {
    "**/android/.gradle": true
  },

  // Emmet configuration for React Native
  "emmet.includeLanguages": {
    "typescript": "typescriptreact",
    "javascript": "javascriptreact"
  },
  "emmet.triggerExpansionOnTab": true,
  "emmet.showExpandedAbbreviation": "always",

  // React Native specific settings
  "react-native-tools.showUserTips": false,
  "react-native-tools.logLevel": "Info",
  "react-native-tools.projectRoot": "${workspaceFolder}",
  "react-native-tools.packager.port": 8081,

  // IntelliSense settings
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "javascript.suggest.includeAutomaticOptionalChainCompletions": true,

  // Enhanced navigation settings
  "typescript.implementationsCodeLens.enabled": true,
  "typescript.referencesCodeLens.enabled": true,
  "typescript.suggest.paths": true,
  "typescript.workspaceSymbols.scope": "allOpenProjects",

  // Bracket pair colorization
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

  // Auto-close tags
  "html.autoClosingTags": true,
  "typescript.autoClosingTags": true,
  "javascript.autoClosingTags": true,

  // Snippet and suggestion settings
  "editor.snippetSuggestions": "top",
  "editor.suggest.showSnippets": true,
  "editor.suggest.showKeywords": false,
  "editor.suggest.showModules": false,
  "editor.suggest.showUsers": false,
  "editor.suggest.showWords": false,

  // Breadcrumbs
  "breadcrumbs.enabled": true,
  "breadcrumbs.showFiles": true,
  "breadcrumbs.showModules": true,
  "breadcrumbs.showClasses": true,
  "breadcrumbs.showMethods": true,
  "breadcrumbs.showFunctions": true,
  "breadcrumbs.showConstructors": true,
  "breadcrumbs.showFields": true,
  "breadcrumbs.showVariables": true,
  "breadcrumbs.showConstants": true,
  "breadcrumbs.showEnums": true,
  "breadcrumbs.showEnumMembers": true,
  "breadcrumbs.showEvents": true,
  "breadcrumbs.showOperators": true,
  "breadcrumbs.showTypeParameters": true,

  // Problems panel
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,

  // Workbench settings
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.wrapTabs": true,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.restoreViewState": true,
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 10,
  "workbench.editor.limit.perEditorGroup": true,

  // Color theme and icon theme
  "workbench.colorTheme": "Default Dark Modern",
  "workbench.iconTheme": "material-icon-theme",

  // Language specific settings - Manual formatting only
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": false
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.suggestOnTriggerCharacters": true,
    "editor.parameterHints.enabled": true
  }
}
